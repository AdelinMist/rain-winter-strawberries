<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <Label fx:id="listLbl" alignment="CENTER" text="Family doctor Appointments" textAlignment="CENTER" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="14.0" />
            </font></Label>
    </top>
    <center>
        <TableView fx:id="appointmentTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="date" prefWidth="238.0" text="Date" />
                <TableColumn fx:id="clinic" prefWidth="262.0" text="Clinic" />
                <TableColumn fx:id="time" prefWidth="254.0" text="Time" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="returnBtn" layoutX="14.0" layoutY="1.0" mnemonicParsing="false" onAction="#returnToMenu" text="Return to Menu" />
                <Button fx:id="cancelBtn" layoutX="632.0" layoutY="1.0" mnemonicParsing="false" onAction="#cancelAppointment" text="Cancel Appointment" />
            </children>
        </AnchorPane>
    </bottom>
</BorderPane>
